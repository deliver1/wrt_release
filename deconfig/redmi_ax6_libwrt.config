########################################
# Target / Device
########################################
CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq807x=y

CONFIG_TARGET_MULTI_PROFILE=y
CONFIG_TARGET_PER_DEVICE_ROOTFS=y

# 红米 AX6 设备本体（保留）
CONFIG_TARGET_DEVICE_qualcommax_ipq807x_DEVICE_redmi_ax6=y

# ❗❗ 关键：不要注入任何 WiFi profile
# CONFIG_TARGET_DEVICE_PACKAGES_qualcommax_ipq807x_DEVICE_redmi_ax6 is not set
# CONFIG_TARGET_DEVICE_PACKAGES_qualcommax_ipq807x_DEVICE_redmi_ax6-stock is not set

CONFIG_TARGET_ROOTFS_INITRAMFS=n


########################################
# Kernel / NSS（有线硬件加速）
########################################
CONFIG_IPQ_MEM_PROFILE_256=y
CONFIG_ATH11K_MEM_PROFILE_512M=y

CONFIG_NSS_FIRMWARE_VERSION_11_4=y
CONFIG_NSS_MEM_PROFILE_HIGH=y

CONFIG_KERNEL_SKB_RECYCLER=y
CONFIG_KERNEL_ZRAM=y


########################################
# ❌ WiFi 全部禁用（根级）
########################################
# 无线驱动 / 用户态 / 工具
CONFIG_PACKAGE_ath11k-firmware-ipq8074=n
CONFIG_PACKAGE_ipq-wifi-redmi_ax6=n

CONFIG_PACKAGE_hostapd=n
CONFIG_PACKAGE_hostapd-common=n

CONFIG_PACKAGE_wpad=n
CONFIG_PACKAGE_wpad-basic=n
CONFIG_PACKAGE_wpad-basic-openssl=n
CONFIG_PACKAGE_wpad-openssl=n

CONFIG_PACKAGE_iw=n
CONFIG_PACKAGE_iwinfo=n
CONFIG_PACKAGE_wireless-regdb=n


########################################
# Network / IPv6（主路由）
########################################
CONFIG_PACKAGE_dnsmasq_full_dhcpv6=y
CONFIG_PACKAGE_ipv6helper=y
CONFIG_PACKAGE_ip6tables-nft=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y


########################################
# Base tools
########################################
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_tcpdump=y
CONFIG_PACKAGE_ethtool=y
CONFIG_PACKAGE_mii-tool=y
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_PACKAGE_openssl-util=y
CONFIG_PACKAGE_xz-utils=y
CONFIG_PACKAGE_xz=y


########################################
# LuCI（精简但够用）
########################################
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-compat=y

CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-app-wol=y
CONFIG_PACKAGE_luci-app-autoreboot=y

# ❌ 明确不要的 LuCI 功能
CONFIG_PACKAGE_luci-app-sqm=n
CONFIG_PACKAGE_luci-app-istorex=n
CONFIG_PACKAGE_luci-app-lucky=n
CONFIG_PACKAGE_luci-app-mosdns=n
CONFIG_PACKAGE_luci-app-easytier=n
CONFIG_PACKAGE_luci-app-oaf=n
CONFIG_PACKAGE_luci-app-smartdns=n


########################################
# 其他
########################################
CONFIG_PACKAGE_easytiers=n
CONFIG_PACKAGE_sqm-scripts-nss=n
