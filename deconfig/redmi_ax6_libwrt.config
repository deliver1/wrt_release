# --- Target / 设备设定 ---
CONFIG_TARGET_qualcommax=y
CONFIG_TARGET_qualcommax_ipq807x=y
CONFIG_TARGET_MULTI_PROFILE=y
CONFIG_TARGET_PER_DEVICE_ROOTFS=y
CONFIG_TARGET_DEVICE_qualcommax_ipq807x_DEVICE_redmi_ax6=y

# --- 纯有线路由核心优化 (移除 WiFi) ---
# 移除 WiFi 固件、驱动和相关工具，释放内存并减少启动自检
# 注意：保留 ipq-wifi-redmi_ax6 是为了包含板载校准数据，防止内核报错，但禁用了实际的无线驱动
CONFIG_TARGET_DEVICE_PACKAGES_qualcommax_ipq807x_DEVICE_redmi_ax6="ipq-wifi-redmi_ax6"
CONFIG_PACKAGE_kmod-ath11k=n
CONFIG_PACKAGE_kmod-ath11k-pci=n
CONFIG_PACKAGE_kmod-ath11k-ahb=n
CONFIG_PACKAGE_hostapd-common=n
CONFIG_PACKAGE_wpad-basic-wolfssl=n
CONFIG_PACKAGE_wpad-openssl=n
CONFIG_PACKAGE_iwinfo=n

# --- 编译选项 ---
CONFIG_TARGET_ROOTFS_INITRAMFS=n
CONFIG_USE_APK=n
CONFIG_DEVEL=y
CONFIG_CCACHE=y

# --- NSS 硬件加速 (核心保留) ---
# 保留了你需要的 NSS 驱动，这是 AX6 跑满千兆/2.5G 的关键
CONFIG_PACKAGE_kmod-qca-nss-drv-igs=y
CONFIG_PACKAGE_kmod-qca-nss-drv-l2tpv2=y
CONFIG_PACKAGE_kmod-qca-nss-drv-lag-mgr=y
CONFIG_PACKAGE_kmod-qca-nss-drv-pppoe=y
CONFIG_PACKAGE_kmod-qca-nss-drv-pptp=y
# 确保 ECM (Connection Manager) 被选中，这是 NSS 加速生效的核心
CONFIG_PACKAGE_kmod-qca-nss-ecm=y
# 如果你的源码包含 NSS 专用的 Shortcut FE，可以开启，否则默认即可

# --- 必要的系统工具 ---
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_BUSYBOX_CONFIG_TELNET=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_PACKAGE_tcpdump=y
CONFIG_PACKAGE_mii-tool=y
# Coremark 跑分保留
CONFIG_PACKAGE_coremark=y
CONFIG_COREMARK_OPTIMIZE_O3=y
CONFIG_COREMARK_ENABLE_MULTITHREADING=y
CONFIG_COREMARK_NUMBER_OF_THREADS=6

# --- 基础协议支持 ---
CONFIG_PACKAGE_proto-bonding=y
CONFIG_PACKAGE_luci-proto-relay=y
CONFIG_PACKAGE_luci-proto-wireguard=y
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_ip6tables-nft=y

# --- Luci App (极简保留) ---
# 移除了 Lucky, iStoreX, OAF, MosDNS, SmartDNS, EasyTier
CONFIG_PACKAGE_luci-app-autoreboot=y
CONFIG_PACKAGE_luci-app-ttyd=y
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-app-wol=y

# --- 移除的插件 (显式禁用以防依赖自动选中) ---
CONFIG_PACKAGE_luci-app-istorex=n
CONFIG_PACKAGE_luci-app-lucky=n
CONFIG_PACKAGE_luci-app-oaf=n
CONFIG_PACKAGE_luci-app-mosdns=n
CONFIG_PACKAGE_luci-app-smartdns=n
CONFIG_PACKAGE_luci-app-easytier=n
CONFIG_PACKAGE_luci-app-sqm=n
CONFIG_PACKAGE_luci-app-vlmcsd=n
CONFIG_PACKAGE_ddns-scripts=n
