# Compile
CONFIG_LUCI_APR=n
CONFIG_DEVEL=y
CONFIG_CCACHE=y

# BUSYBOX
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_BUSYBOX_CONFIG_TELNET=y

# Proto
CONFIG_PACKAGE_proto-bonding=y
CONFIG_PACKAGE_luci-proto-wireguard=y
CONFIG_PACKAGE_luci-proto-relay=y

# Libraries
CONFIG_PACKAGE_luci-lib-ipkg=y
CONFIG_PACKAGE_libopenssl-legacy=y

# Disable Package
# CONFIG_PACKAGE_automounten  # 已注释，不需要自动挂载

# DEFAULT SET
CONFIG_PACKAGE_default-settings=y
CONFIG_PACKAGE_default-settings-chn=y

# Coremark
CONFIG_PACKAGE_coremark=y
CONFIG_COREMARK_OPTIMIZE_O3=y
CONFIG_COREMARK_ENABLE_MULTITHREADING=y
CONFIG_COREMARK_NUMBER_OF_THREADS=6

# iptables-nft
CONFIG_PACKAGE_iptables-nft=y
CONFIG_PACKAGE_iptables-nft-nat=y

# Package
CONFIG_PACKAGE_easytier=y

# Enable Luci App（只保留必要，全部精简）
CONFIG_PACKAGE_luci-app-easytiier=y  # 保留easytier本体
# CONFIG_PACKAGE_luci-app-werconsole=y   # 删除
# CONFIG_PACKAGE_luci-app-istorex=y      # 删除
# CONFIG_PACKAGE_luci-app-lucky=y        # 删除
# CONFIG_PACKAGE_luci-app-mosdns=y       # 删除
# CONFIG_PACKAGE_luci-app-oaf=y          # 删除
# CONFIG_PACKAGE_luci-app-poetry=y       # 删除
# CONFIG_PACKAGE_luci-app-smartdns=y     # 删除
# CONFIG_PACKAGE_luci-app-ttyd=y         # 删除
# CONFIG_PACKAGE_luci-app-upnp=y         # 移到下面统一添加
# CONFIG_PACKAGE_luci-app-volay=y        # 删除

# 新增：UPnP 支持（必须加）
CONFIG_PACKAGE_miniupnpd=y
CONFIG_PACKAGE_miniupnpd-igdv1=y
CONFIG_PACKAGE_luci-app-upnp=y
